{
  "plugins": ["async-await"],
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
      "strict": 0
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "async-await/space-after-async": 2,
        "async-await/space-after-await": 2,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
